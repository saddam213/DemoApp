<Views:ViewBase x:Class="DemoApp.Views.AudioWhisperView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:System="clr-namespace:System;assembly=mscorlib"
    xmlns:local="clr-namespace:DemoApp.Views"
    xmlns:Whisper="clr-namespace:TensorStack.TextGeneration.Pipelines.Whisper;assembly=TensorStack.TextGeneration"
    xmlns:CommonControls="clr-namespace:TensorStack.WPF.Controls;assembly=TensorStack.WPF"
    xmlns:Controls="clr-namespace:DemoApp.Controls"
    xmlns:Views="clr-namespace:DemoApp.Views">
    <Views:ViewBase.Resources>

        <ObjectDataProvider x:Key="TaskType" MethodName="GetValues" ObjectType="{x:Type System:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="Whisper:TaskType"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

        <ObjectDataProvider x:Key="LanguageType" MethodName="GetValues" ObjectType="{x:Type System:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="Whisper:LanguageType"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

    </Views:ViewBase.Resources>

    <Grid DataContext="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:AudioWhisperView}}}">

        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition MinWidth="360"/>
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="4*" />
            </Grid.ColumnDefinitions>


            <!--***Left Panel***-->
            <Grid Grid.Column="0">
                <Border Style="{StaticResource BorderPanel}" Margin="4">
                    <DockPanel x:Name="LeftPanelContainer" Margin="4" LastChildFill="False">

                        <!--Model Selector-->
                        <StackPanel DockPanel.Dock="Top" IsEnabled="{Binding TextService.IsLoading, Converter={StaticResource InverseBoolConverter}}">
                            <Controls:TextModelControl 
                                Settings="{Binding Settings, Mode=OneWay}" 
                                CurrentPipeline="{Binding CurrentPipeline, Mode=TwoWay}"
                                ModelType="Whisper"
                                SelectionChanged="SelectedPipelineChanged"/>
                        </StackPanel>

                        <!--Audio Input-->
                        <StackPanel DockPanel.Dock="Top">
                            <TextBlock Text="Audio Input" Style="{StaticResource FieldTextBlockStyle}" />
                            <CommonControls:AudioElement Source="{Binding AudioInput, Mode=TwoWay}" Configuration="{Binding Settings}" IsReplayEnabled="False" />
                        </StackPanel>

                        <!--Advanced-->
                        <StackPanel DockPanel.Dock="Top" IsEnabled="{Binding TextService.IsLoaded}">
                            <UniformGrid Columns="2" Margin="0,4,0,0">
                                <StackPanel>
                                    <TextBlock Text="Task" Style="{StaticResource FieldTextBlockStyle}" />
                                    <ComboBox ItemsSource="{Binding Source={StaticResource TaskType}}" SelectedItem="{Binding SelectedTask}" />
                                </StackPanel>
                                <StackPanel>
                                    <TextBlock Text="Language" Style="{StaticResource FieldTextBlockStyle}" />
                                    <ComboBox ItemsSource="{Binding Source={StaticResource LanguageType}}" SelectedItem="{Binding SelectedLanguage}" />
                                </StackPanel>
                            </UniformGrid>
                            <UniformGrid Columns="4" Margin="0,4,0,0">
                                <StackPanel>
                                    <TextBlock Text="Min Length" Style="{StaticResource FieldTextBlockStyle}" />
                                    <TextBox Text="{Binding MinLength}" />
                                </StackPanel>
                                <StackPanel>
                                    <TextBlock Text="Max Length" Style="{StaticResource FieldTextBlockStyle}" />
                                    <TextBox Text="{Binding MaxLength}" />
                                </StackPanel>
                                <StackPanel>
                                    <TextBlock Text="Beams" Style="{StaticResource FieldTextBlockStyle}" />
                                    <TextBox Text="{Binding Beams}" />
                                </StackPanel>
                                <StackPanel>
                                    <TextBlock Text="Seed" Style="{StaticResource FieldTextBlockStyle}" />
                                    <TextBox Text="{Binding Seed}" />
                                </StackPanel>
                                <StackPanel>
                                    <TextBlock Text="TopK" Style="{StaticResource FieldTextBlockStyle}" />
                                    <TextBox Text="{Binding TopK}" />
                                </StackPanel>
                                <StackPanel>
                                    <TextBlock Text="TopP" Style="{StaticResource FieldTextBlockStyle}" />
                                    <TextBox Text="{Binding TopP}" />
                                </StackPanel>
                                <StackPanel>
                                    <TextBlock Text="Temperature" Style="{StaticResource FieldTextBlockStyle}" />
                                    <TextBox Text="{Binding Temperature}" />
                                </StackPanel>
                                <StackPanel>
                                    <TextBlock Text="LengthPenalty" Style="{StaticResource FieldTextBlockStyle}" />
                                    <TextBox Text="{Binding LengthPenalty}" />
                                </StackPanel>
                                <!--<StackPanel>
                                    <TextBlock Text="DiversityLength" Style="{StaticResource FieldTextBlockStyle}" />
                                    <TextBox Text="{Binding DiversityLength}" />
                                </StackPanel>-->
                            </UniformGrid>

                            <UniformGrid Columns="2"  Margin="0,4,0,0">
                                <StackPanel>
                                    <TextBlock Text="Early Stopping" Style="{StaticResource FieldTextBlockStyle}" />
                                    <ComboBox ItemsSource="{Binding Source={StaticResource EarlyStopping}}" SelectedItem="{Binding EarlyStopping}" />
                                </StackPanel>
                                <CheckBox Content="Show All Beams" IsChecked="{Binding IsMultipleResult}" Margin="0,21,0,0" HorizontalAlignment="Right"/>
                            </UniformGrid>

                        </StackPanel>


                        <!--Execute/Cancel-->
                        <UniformGrid DockPanel.Dock="Bottom" Columns="2" Height="30">
                            <Button Content="Cancel" Command="{Binding CancelCommand}" />
                            <Button Content="Execute" Command="{Binding ExecuteCommand}" />
                        </UniformGrid>

                    </DockPanel>
                </Border>
            </Grid>


            <!--GridSplitter-->
            <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" Width="5" Opacity=".4" Margin="0,20" />


            <!--***Middle Panel***-->
            <Grid Grid.Column="2" Grid.Row="0" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="7*" />
                    <ColumnDefinition Width="5" />
                    <ColumnDefinition Width="0" />
                </Grid.ColumnDefinitions>


                <!--Content-->
                <Grid Grid.Column="0" >
                    <Border Style="{StaticResource BorderPanel}" Margin="4">
                        <DockPanel>
                            <CommonControls:ProgressElement  DockPanel.Dock="Bottom" Progress="{Binding Progress}" Margin="0,2,0,0"/>

                            <Grid  DockPanel.Dock="Bottom" >
                                <TabControl ItemsSource="{Binding Results}" SelectedIndex="{Binding SelectedBeam}" Visibility="{Binding IsMultipleResult, Converter={StaticResource BooleanToHiddenConverter}}">
                                    <TabControl.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel>
                                                <TextBlock Text="{Binding Header}" MinWidth="100"/>
                                                <TextBlock Text="{Binding Score, StringFormat={}Score: {0:F4}}" FontSize="8" FontStyle="Italic" Opacity=".6" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </TabControl.ItemTemplate>
                                    <TabControl.ContentTemplate>
                                        <DataTemplate>
                                            <TextBox Text="{Binding Content}" TextWrapping="Wrap" IsReadOnly="True" BorderThickness="0" Margin="0,3,0,0"/>
                                        </DataTemplate>
                                    </TabControl.ContentTemplate>
                                </TabControl>

                                <DockPanel Margin="0,3,0,0" Visibility="{Binding IsMultipleResult, Converter={StaticResource InverseBooleanToHiddenConverter}}">
                                    <TextBlock DockPanel.Dock="Top" Text="Result" Style="{StaticResource FieldTextBlockStyle}" />
                                    <TextBox Text="{Binding Result.Content}" TextWrapping="Wrap" IsReadOnly="True" BorderThickness="0" />
                                </DockPanel>
                            </Grid>


                        </DockPanel>
                    </Border>
                </Grid>


                <!--GridSplitter-->
                <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" Width="5" Opacity=".4" Margin="0,20"/>


                <!--***Right Panel***-->
                <Grid Grid.Column="2" >
                    <Border Style="{StaticResource BorderPanel}" Margin="4">
                        <StackPanel>
                            <TextBlock Text="{Binding TextService.Device.Type, StringFormat={}Device: {0}}" />
                            <TextBlock Text="{Binding TextService.Device.DeviceId, StringFormat={}DeviceId: {0}}" />
                            <TextBlock Text="{Binding TextService.Model.Name, StringFormat={}Model: {0}}" />
                            <TextBlock Text="{Binding TextService.IsLoaded, StringFormat={}IsLoaded: {0}}" />
                            <TextBlock Text="{Binding TextService.IsLoading, StringFormat={}IsLoading: {0}}" />
                            <TextBlock Text="{Binding TextService.IsExecuting, StringFormat={}IsExecuting: {0}}" />
                            <TextBlock Text="{Binding TextService.CanCancel, StringFormat={}CanCancel: {0}}" />
                        </StackPanel>
                    </Border>
                </Grid>

            </Grid>
        </Grid>

    </Grid>
</Views:ViewBase>
